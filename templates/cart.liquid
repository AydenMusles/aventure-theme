<div class="page-width page-content">

  {% include 'breadcrumbs' %}

  <div class="grid">
    <div class="grid__item">
      {% if customer %}
        {% if customer.tags contains 'blocked' %}
          <header class="section-header section-header--404">
            <h1 class="section-header__title">{{ 'cart.general.title' | t }}</h1>
            <div class="rte text-spacing">
              <p>{{ 'cart.general.blocked' | t }}</p>
              <p>{{ 'cart.general.continue_browsing_html' | t }}</p>
            </div>
          </header>
        {% else %}
          {% if cart.item_count > 0 %}
            <header class="section-header">
              <h1 class="section-header__title">{{ 'cart.general.title' | t }}</h1>
            </header>

            <h2 class="mb-20">{{ 'cart.general.brands' | t }}</h2>

            {% assign vendors = cart.items | map: "vendor" | uniq %}
            {% assign min_order_reached = true %}

            <ul>
              {% for vendor in vendors %}
                {% assign amount_in_cart_for_vendor = 0 %}
                {% assign weight_in_cart_for_vendor = 0 %}
                {% for item in cart.items %}
                  {% if item.vendor == vendor %}
                    {% assign item_total_weight = item.grams | times: item.quantity %}
                    {% assign weight_in_cart_for_vendor = weight_in_cart_for_vendor | plus: item_total_weight %}
                    {% assign amount_in_cart_for_vendor = amount_in_cart_for_vendor | plus: item.final_line_price %}
                    {% assign franco_cents = item.product.metafields.shipping.franco_cents %}
                    {% assign min_order_cents = item.product.metafields.shipping.min_order_cents %}
                    {% assign shipping_cost_cents = item.product.metafields.shipping.shipping_cost_cents %}
                  {% endif %}
                {% endfor %}
                {% assign money_franco = franco_cents | money %}
                {% assign money_min_order = min_order_cents | money %}
                {% assign money_shipping_cost = shipping_cost_cents | money %}
                {% assign money_amount_in_cart_for_vendor = amount_in_cart_for_vendor | money %}
                {% assign url_for_vendor = vendor | url_for_vendor | replace: '%26%2339%3B', '%27' %}
                {% if vendor == "Aventure Bio Grossiste" %}
                  {% assign money_franco_heavy = 32000 | money %}
                  {% if amount_in_cart_for_vendor <  min_order_cents %}
                    {% assign min_order_reached = false %}
                    <li>{{ 'cart.general.min_order_not_reached_html' | t: vendor: vendor, money_amount_in_cart_for_vendor: money_amount_in_cart_for_vendor, money_min_order: money_min_order, url_for_vendor: url_for_vendor }}</li>
                  {% elsif amount_in_cart_for_vendor < franco_cents %}
                    <li>{{ 'cart.general.franco_not_reached_grossiste_html' | t: vendor: vendor, money_amount_in_cart_for_vendor: money_amount_in_cart_for_vendor, money_franco: money_franco, money_franco_heavy: money_franco_heavy, money_shipping_cost: money_shipping_cost, url_for_vendor: url_for_vendor }}</li>
                  {% elsif amount_in_cart_for_vendor < 32000 %}
                    {% if weight_in_cart_for_vendor < 30000 %}
                      <li>{{ 'cart.general.franco_reached_html' | t: vendor: vendor, money_amount_in_cart_for_vendor: money_amount_in_cart_for_vendor, url_for_vendor: url_for_vendor }}</li>
                    {% else %}
                      <li>{{ 'cart.general.franco_heavy_not_reached_grossiste_html' | t: vendor: vendor, money_amount_in_cart_for_vendor: money_amount_in_cart_for_vendor, money_franco: money_franco, money_franco_heavy: money_franco_heavy, money_shipping_cost: money_shipping_cost, url_for_vendor: url_for_vendor }}</li>
                    {% endif %}
                  {% else %}
                    <li>{{ 'cart.general.franco_reached_html' | t: vendor: vendor, money_amount_in_cart_for_vendor: money_amount_in_cart_for_vendor, url_for_vendor: url_for_vendor }}</li>
                  {% endif %}
                {% else %}
                  {% if amount_in_cart_for_vendor <  min_order_cents %}
                    {% assign min_order_reached = false %}
                    <li>{{ 'cart.general.min_order_not_reached_html' | t: vendor: vendor, money_amount_in_cart_for_vendor: money_amount_in_cart_for_vendor, money_min_order: money_min_order, url_for_vendor: url_for_vendor }}</li>
                  {% elsif amount_in_cart_for_vendor < franco_cents %}
                    <li>{{ 'cart.general.franco_not_reached_html' | t: vendor: vendor, money_amount_in_cart_for_vendor: money_amount_in_cart_for_vendor, money_franco: money_franco, money_shipping_cost: money_shipping_cost, url_for_vendor: url_for_vendor }}</li>
                  {% else %}
                    <li>{{ 'cart.general.franco_reached_html' | t: vendor: vendor, money_amount_in_cart_for_vendor: money_amount_in_cart_for_vendor, url_for_vendor: url_for_vendor }}</li>
                  {% endif %}
                {% endif %}
              {% endfor %}
            </ul>

            <form action="/cart" method="post" novalidate class="cart">

              <div class="cart__row small--hide">
                <div class="grid grid--full">
                  <div class="grid__item medium-up--two-fifths medium-up--push-three-fifths">
                    <div class="grid grid--full">
                      <div class="grid__item one-third small--half text-center">
                        {{ 'cart.label.quantity' | t }}
                      </div>
                      <div class="grid__item one-third small--half text-center">
                        {{ 'cart.label.unit_price' | t }}
                      </div>
                      <div class="grid__item one-third small--half text-center">
                        {{ 'cart.label.total' | t }}
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              {% for item in cart.items %}
                <div class="cart__row">
                  <div class="grid grid--full cart__row--table-large">

                    <div class="grid__item medium-up--three-fifths">
                      <div class="grid mb-10">

                        <div class="grid__item one-quarter">
                          <a href="{{ item.url | within: collections.all }}" class="cart__image">
                            {%- assign img_url = item | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                            <img class="lazyload"
                                data-src="{{ img_url }}"
                                data-widths="[180, 360, 540]"
                                data-aspectratio="{{ item.aspect_ratio }}"
                                data-sizes="auto"
                                alt="{{ item.title | escape }}">
                          </a>
                        </div>

                        <div class="grid__item three-quarters">
                          <a href="{{ item.url }}" class="h4 cart__product-name">
                            {{ item.product.title }}
                          </a>
                          {% unless item.variant.title contains 'Default' %}
                            <p class="cart__product-meta">
                              {{ item.variant.title }}
                            </p>
                          {% endunless %}

                          {%- assign property_size = item.properties | size -%}
                          {% if property_size > 0 %}
                            {% for p in item.properties %}
                              {%- assign first_character_in_key = p.first | truncate: 1, '' -%}
                              {% unless p.last == blank or first_character_in_key == '_' %}
                                {{ p.first }}:

                                {% if p.last contains '/uploads/' %}
                                  <a href="{{ p.last }}">{{ p.last | split: '/' | last }}</a>
                                {% else %}
                                  {{ p.last }}
                                {% endif %}

                                <br>
                              {% endunless %}
                            {% endfor %}
                          {% endif %}

                          <p class="cart__product-meta">
                            <a href="/cart/change?line={{ forloop.index }}&amp;quantity=0" class="btn btn--small">
                              {{ 'cart.general.remove' | t }}
                            </a>
                          </p>
                        </div>

                      </div>
                    </div>

                    <div class="grid__item medium-up--two-fifths">
                      <div class="grid grid--full cart__row--table">

                        <div class="grid__item one-third text-center">

                          <div class="js-qty__wrapper">
                            <button type="button" class="js-qty__adjust js-qty__adjust--minus remove_qty_from_cart" data-id="{{item.key}}" aria-label="{{ 'cart.general.reduce_quantity' | t }}">
                              {% include 'icon-minus' %}
                              <span class="icon__fallback-text" aria-hidden="true">&minus;</span>
                            </button>
                            {% if product.metafields.quantity.min_order == blank %}
                              {% assign min_order_quantity = 1 %}
                            {% else %}
                              {% assign min_order_quantity = product.metafields.quantity.min_order %}
                            {% endif %}
                            <input type="text" id="updates_{{ item.key }}" class="js-qty__num cart__product-qty" value="{{item.quantity}}" min="{{min_order_quantity}}" data-id="{{item.key}}" aria-label="quantity" pattern="[0-9]*" name="updates[]">
                            <button type="button" class="js-qty__adjust js-qty__adjust--plus add_qty_to_cart" data-id="{{item.key}}" aria-label="{{ 'cart.general.increase_quantity' | t }}">
                              {% include 'icon-plus' %}
                              <span class="icon__fallback-text" aria-hidden="true">+</span>
                            </button>
                          </div>

                          <button type="submit" name="update" class="btn btn--secondary p-10 update-cart">
                            {{ 'cart.general.update' | t }}
                          </button>
                        </div>

                        <div class="grid__item one-third text-center">
                          <span class="cart__price">{{ item.price | money }}</span>
                        </div>

                        <div class="grid__item one-third text-center">
                          {% if item.original_line_price != item.line_price %}
                            <small class="cart__price cart__price--strikethrough">{{ item.original_line_price | money }}</small>
                          {% endif %}

                          <span class="cart__price">{{ item.line_price | money }}</span>

                          {%- assign discounts_size = item.discounts | size -%}
                          {% if discounts_size > 0 %}
                            {% for discount in item.discounts %}
                              <small class="cart__discount">{{ discount.title }}</small>
                            {% endfor %}
                          {% endif %}
                        </div>
                      </div>
                    </div>

                  </div>
                </div>
              {% endfor %}

              <div class="cart__row">
                  {% comment %}
                    Optional, add a textarea for special notes
                      - Your theme settings can turn this on or off. Default is on.
                      - Make sure you have name="note" for the message to be submitted properly
                  {% endcomment %}
                  <div class="grid__item hide large-up--show large-up--one-half">
                    <h2 class="text-center mb-25 mt-10 fs-16" itemprop="name">Profitez-en pour tester de nouvelles marques</h2>
                    <div class="grid grid--uniform grid--collection fs-12">
                      {%- assign grid_item_width = 'large-up--one-third' -%}
                      {% paginate collections["echantillons-produits"].products by 100000 %}
                        {% for product in collections["echantillons-produits"].products %}
                          {% if product.tags contains 'likeable' %}
                            {% if product.available %}
                              {% include 'product-grid-item-cart' %}
                            {% endif %}
                          {% endif %}
                        {% endfor %}
                      {% endpaginate %}
                    </div>
                  </div>
                  <div class="grid__item large-up--one-half text-center mt-10 medium-up--text-right{% unless settings.cart_notes_enable %} medium-up--push-seven-twelfths{% endunless %}">
                    <div class="grid grid--full cart__row--table">
                      <div class="grid__item one-half medium-up--two-thirds medium-up--text-center">
                        <p class="h3 cart__subtotal">{{ 'cart.general.subtotal' | t }}</p>
                      </div>
                      <div class="grid__item one-half medium-up--one-third">
                        <p class="h3 cart__subtotal cat__subtotal-amount">{{ cart.total_price | money }}</p>
                      </div>
                    </div>

                    {% if cart.total_discounts > 0 %}
                      {%- assign cartTotalDiscounts = cart.total_discounts | money -%}
                      <p class="cart__savings">{{ 'cart.general.savings_html' | t: savings: cartTotalDiscounts }}</p>
                    {% endif %}
                    <small class="mb-20">
                      {{ 'cart.general.shipping_at_checkout' | t }}<br />
                      {% if settings.enable_currencies %}
                      {{ 'cart.general.orders_processed_in_currency_html' | t: currency: shop.currency }}
                      {% endif %}
                    </small>
                    {% if settings.cart_notes_enable %}
                      <label for="CartSpecialInstructions" class="mb-0">{{ 'cart.general.note' | t }}</label>
                      <textarea name="note" class="w-80" id="CartSpecialInstructions">{{ cart.note }}</textarea>
                    {% endif %}

                    {% if settings.cart_terms_conditions_enable %}
                      <p class="ajaxcart__note ajaxcart__note--terms">
                        <input type="checkbox" id="CartPageAgree" />
                        <label for="CartPageAgree">
                          {% if settings.cart_terms_conditions_link != blank  and settings.confidentiality_policy_link != blank %}
                            {{ 'cart.general.terms_html' | t: url_cgv: settings.cart_terms_conditions_link, url_confidentiality: settigns.confidentiality_policy_link }}
                          {% else %}
                            {{ 'cart.general.terms' | t }}
                          {% endif %}
                        </label>
                      </p>
                    {% endif %}

                    {% if additional_checkout_buttons and settings.cart_additional_buttons %}
                      <div class="additional_checkout_buttons">{{ content_for_additional_checkout_buttons }}</div>
                    {% endif %}

                    <button type="submit" name="update" class="btn btn--secondary update-cart">
                      {{ 'cart.general.update' | t }}
                    </button>
                    {% if min_order_reached %}
                      <button type="submit" name="checkout" class="btn btn--success cart__checkout{% if settings.cart_terms_conditions_enable %} cart__checkout--page{% endif %}">
                        {{ 'cart.general.checkout' | t }}
                      </button>
                    {% else %}
                      <button type="submit" name="checkout" class="btn btn--alert cart__checkout{% if settings.cart_terms_conditions_enable %} cart__checkout--page{% endif %}" disabled>
                        {{ 'cart.general.min_order_not_reached' | t }}
                      </button>
                    {% endif %}
                  </div>
                </div>


            </form>

          {% else %}
            <header class="section-header section-header--404">
              <h1 class="section-header__title">{{ 'cart.general.title' | t }}</h1>
              <div class="rte text-spacing">
                <p>{{ 'cart.general.empty' | t }}</p>
                <p >{{ 'cart.general.continue_browsing_html' | t }}</p>
              </div>
            </header>
          {% endif %}
        {% endif %}

      {% else %}
        <header class="section-header section-header--404">
          <h1 class="section-header__title">{{ 'cart.general.title' | t }}</h1>
          <div class="rte text-spacing">
            <p >{{ 'cart.general.please_login_html' | t }}</p>
          </div>
        </header>
      {% endif%}
    </div>
  </div>
</div>
