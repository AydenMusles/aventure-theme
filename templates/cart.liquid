<main class="page__main">
      <main class="main main--cart">
  <div class="main__sections">
    <div id="shopify-section-cart" class="shopify-section"><section class="cart cart--loading cart--init container container--hd wrapper" data-cart="cart">

  <div class="cart__content container" data-cart="content">
    <header class="cart__header">
      <h2 class="cart__heading" data-cart="heading">Your Shopping Cart</h2>
    </header>
  
    <div class="cart__items">
      <ul class="cart__list list" data-cart="items"></ul>
    </div>
  
    <div class="cart__cta">
      <div class="grid grid--right">
        <div class="cart__cta-content grid__column grid__column--12 grid__column--12@sm grid__column--5@md">
          <div class="cart__summary">
            <table class="table">
              <tbody>
                <tr>
                  <td><p class="h4">Subtotal</p></td>
                  <td><p class="h4" data-cart="subtotal"></p></td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="cart__checkout-cta">
            <a
              href="/checkout"
              class="button button--black button--large button--expand"
              data-cart="cta"
            >Checkout</a>
          </div>
          <div class="cart__continue-shopping">
            <a
              href="/checkout"
              class="cart__continue-shopping-link"
              data-cart="cta"
            >Continue Shopping</a>
          </div>
        </div>
      </div>
    </div>    
  </div>

  <div class="cart__empty container hidden" data-cart="empty">
    <h5 class="h2 cart__empty-heading">Your shopping cart is empty.</h5>
    <a href="/collections/all" class="cart__start-shopping button button--primary">Start Shopping</a>
  </div>

  <div class="cart__loader" data-cart="loader">
    <div class="spinner"></div>
  </div>

</section>

