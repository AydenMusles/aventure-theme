{% if customer or section.settings.display_to_visitors %}
  <div class="w-100 my-10 text-center">
    <a href="{{ section.settings.link }}"  class="btn">{{ section.settings.button_text }} </a>
  </div>
{% endif %}

{% schema %}
  {
    "name": "Button",
    "settings": [
      {
          "type": "url",
          "id": "link",
          "label": "Link"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text",
        "default": "Go to new page"
      },
      {
        "type": "checkbox",
        "id": "display_to_visitors",
        "label": "Also display to user not logged in?",
        "default": true
      }
    ],
    "presets": [
      {
        "name": "Button",
        "category": "CTA"
      }
    ]
  }
{% endschema %}
