{% if block.settings.divider %}<div class="section--divider">{% endif %}

<div class="page-width">
  {% if block.settings.title != blank %}
    <div class="section-header">
      <h2 class="section-header__title">{{ block.settings.title }}</h2>
    </div>
  {% endif %}

  <div class="grid grid--uniform{% unless block.settings.enable_gutter %} grid--no-gutters{% endunless %}">


    {%- assign collection = collections[block.settings.collection] -%}
    {%- assign background_position = "center center" -%}

    {% case block.settings.per_row %}
    {% when 2 %}
      {%- assign grid_item_width = 'medium-up--one-half' -%}
    {% when 3 %}
      {%- assign grid_item_width = 'small--one-half medium-up--one-third' -%}
    {% when 4 %}
      {%- assign grid_item_width = 'small--one-half medium-up--one-quarter collection-item--four' -%}
    {% when 5 %}
      {%- assign grid_item_width = 'small--one-half medium-up--one-fifth collection-item--five' -%}
    {% endcase %}

    {%- assign collection = collections[block.settings.collection_1] -%}
    {% if collection %}
      {% include 'collection-grid-item', per_row: block.settings.per_row %}
    {% endif %}
    {%- assign collection = collections[block.settings.collection_2] -%}
